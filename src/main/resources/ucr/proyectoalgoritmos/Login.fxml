<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #e0f2f7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucr.proyectoalgoritmos.Controller.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
         <Label text="Security System - Login" textFill="#263238">
            <font>
               <Font name="Segoe UI Black" size="32.0" />
            </font>
         </Label>
         <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label text="Usuario" textFill="#455a64">
               <font>
                  <Font name="Segoe UI Semibold" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="UserName" prefHeight="40.0" promptText="Ingresa tu usuario" style="-fx-background-radius: 5; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-border-width: 1;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </VBox>
         <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label text="Contraseña" textFill="#455a64">
               <font>
                  <Font name="Segoe UI Semibold" size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="Password" prefHeight="40.0" promptText="Ingresa tu contraseña" style="-fx-background-radius: 5; -fx-border-color: #b0bec5; -fx-border-radius: 5; -fx-border-width: 1;">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
         </VBox>
         <Button fx:id="Enter" onAction="#enterOnAction" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8;" text="Iniciar Sesión">
            <font>
               <Font name="Segoe UI Bold" size="20.0" />
            </font>
         </Button>
      </VBox>
   </center>
</BorderPane>